# frozen_string_literal: true

##
# Gemfile for Parent Onboarding AI Backend
#
# Rails 8 API application with PostgreSQL, authentication, and AI integration.
# See _docs/tech-stack.md for detailed technology decisions.
#

source 'https://rubygems.org'

ruby '>= 3.3.0'

# Core Framework
gem 'rails', '~> 8.0'
gem 'pg', '~> 1.5'
gem 'puma', '~> 6.4'

# Rails 8 Features
gem 'solid_cache'
gem 'solid_queue'
gem 'good_job', '~> 4.0'

# API & Serialization
gem 'jbuilder'
gem 'rack-cors'
gem 'rack-attack'
gem 'oj' # Fast JSON parsing

# Authentication & Authorization
gem 'devise', '~> 4.9'
gem 'devise-jwt', '~> 0.11'
gem 'pundit', '~> 2.3'

# AI & LLM Integration
gem 'langchainrb'
gem 'ruby-openai'

# Background Jobs
# (GoodJob already included above)

# File Storage
gem 'aws-sdk-s3', '~> 1.140'
gem 'aws-sdk-textract', '~> 1.60'

# Email
gem 'sendgrid-ruby'

# Soft Deletes & Auditing
gem 'discard', '~> 1.3'

# Utilities
gem 'bootsnap', require: false
gem 'tzinfo-data', platforms: %i[windows jruby]

group :development, :test do
  # Debugging
  gem 'debug', platforms: %i[mri windows]
  gem 'pry-rails'

  # Testing
  gem 'rspec-rails', '~> 7.0'
  gem 'factory_bot_rails', '~> 6.4'
  gem 'faker', '~> 3.2'

  # Code Quality
  gem 'rubocop', '~> 1.60', require: false
  gem 'rubocop-rails', '~> 2.23', require: false
  gem 'rubocop-rspec', '~> 2.26', require: false
  gem 'rubocop-performance', '~> 1.20', require: false

  # Security
  gem 'brakeman', require: false
  gem 'bundler-audit', require: false
end

group :development do
  # Email preview in development
  gem 'letter_opener'
  gem 'letter_opener_web'

  # Performance monitoring
  gem 'bullet'
end

group :test do
  gem 'shoulda-matchers', '~> 6.0'
  gem 'vcr', '~> 6.2'
  gem 'webmock', '~> 3.19'
  gem 'simplecov', require: false
  gem 'database_cleaner-active_record'
  gem 'rspec_junit_formatter'
end

